<h2>Sign Up</h2>

<%= form_tag "/users" do %>
  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </p>
  <p>
    <%= label_tag :bio %>
    <%= text_field_tag :bio %>
  </p>
  <%= submit_tag "Sign Up" %>
<% end %>
