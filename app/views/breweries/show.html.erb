<h2><%= @brewery.name %></h2>

<p>
  <%= link_to "Edit", edit_brewery_path %>
</p>


<div class="col-md-4">

<p><%= @brewery.description %></p>
</div>
<div class="col-md-4 col-md-offset-1">
<h2>Beers</h2>


<% Beer.where(brewery_id: @brewery.id).order('id desc').each do |beer| %>
	<h3><%= beer.name %></h3>
      	<%= link_to image_tag(beer.image_url, :class => "img-rounded"), "/beers/#{beer.id}" %>
  <p>
    <%= beer.description %>

  </p>
<% end %>

