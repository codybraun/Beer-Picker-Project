
<table class="table table-striped table-bordered">
  <% @beers.each do |beer| %>
    <tr>
    	<td>
    	<%= link_to image_tag(beer.image_url, :class => "img-rounded"), "/beers/#{beer.id}" %>
    	</td>
    	<td>
      <%= link_to beer.name, "/beers/#{beer.id}" %>
      </td>
      
      <td>
    	<%= link_to Brewery.find_by(id: beer.brewery.id).name, "/breweries/#{beer.brewery_id}" %>
    	</td>
    	<td>
      <%= link_to "Delete", "/beers/#{beer.id}", :method => 'delete' %>
      </td>
    </tr>
  <% end %>
</table>
